<%- include("./partials/header") -%>
    <h1>Compose</h1>
    <form action="/compose" method="POST">
        <div class="form-group">
            <label for="Title">Title</label>
            <input class="form-control" type="text" id="Title" name="postTitle" />
            <label for="Post">Post</label>
            <textarea class="form-control" id="Post" name="postBody" rows="5" cols="30"></textarea>
        </div>
        <button class="btn btn-primary" type="submit" value="publish">Publish</button>
    </form>
<%- include("./partials/footer") -%>